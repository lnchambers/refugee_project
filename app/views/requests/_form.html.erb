<%= form_for @request do |f| %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :gender %>
  <%= f.select :gender, ["Cis-Male", "Cis-Female", "Trans-Male", "Trans-Female", "Non-Binary", "Intersex", "Other"] %>

  <%= f.label :country_of_origin %>
  <%= f.select :country_of_origin, countries %>

  <%= f.label :group_size %>
  <%= f.number_field :group_size %>

  <%= f.label :country_of_separation %>
  <%= f.select :country_of_separation, countries  %>

  <%= f.submit %>

<% end %>
