<section class="body-container">
  <article class="body-main">
    <section class="card-container">
      <request class="request-card">
        <div class="request-id">Request ID:</div><div><%= @request.id %></div>
        <h2>Status: <status class="<%= @request.status.downcase %>"><%= @request.status %></h2>
      </request>
    </section>
    <button class="info-button">See More Info?</button>
    <section class="hidden-info">
      <table>
        <tr>
          <th>Name</th>
          <th>Age</th>
          <th class='gender'>Gender</th>
          <th>Country of Origin</th>
          <th>Group Size</th>
          <th>Country of Separation</th>
        </tr>
        <tr>
          <td><%= @request.name %></td>
          <td><%= @request.age %></td>
          <td><%= @request.gender %></td>
          <td><%= @request.country_of_origin %></td>
          <td><%= @request.group_size %></td>
          <td><%= @request.country_of_separation %></td>
        </tr>
      </table>
    </section>
  </article>
</section>
