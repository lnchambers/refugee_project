<h3>Your past requests</h3>
<section class="card-container">
  <% current_user.requests.each do |request| %>
    <request class="request-card">
      <div class="request-name"><%= link_to request.name, request_path(request) %></div>
      <h2>Status: <status class="<%= request.status.downcase %>"><%= request.status %></status></h2>
      <h3>Request made by <%= request.user.first_name %></h3>
    </request>
  <% end %>
</section>
