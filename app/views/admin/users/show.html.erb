<section class="body-container">
  <article class="body-main">
    <h1>Investigator Profile</h1>

    <%= render partial: 'user-created' if !flash[:notice].nil? %>
    <h2>Requests made by <%= @user.first_name %></h2>
    <%= render partial: 'requests' if !@user.requests.empty? %>
    <%= render partial: 'layouts/cannot-locate' if @user.requests.empty? %>
  </article>
</section>
