<!DOCTYPE html>
<html>
  <head>
    <title>RefugeeProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <link href="https://fonts.googleapis.com/css?family=Anton|Roboto|Fjalla+One" rel="stylesheet">
  </head>

  <body>
    <nav class="nav">
      <nav class="nav-login">
        <%= render partial: "layouts/admin-nav" if current_admin? %>
        <%= render partial: "layouts/nav" unless current_user.nil? %>
        <%= render partial: "layouts/login" if user_signed_in? %>
      </nav>
    </nav>
    <% if flash[:success] %>
      <div class="notice"><%= flash[:success].html_safe %></div>
    <% end %>
    <% if flash[:error] %>
      <div class="notice"><%= flash[:error].html_safe %></div>
    <% end %>
    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice].html_safe %></div>
    <% end %>
    <%= yield %>
    <%= javascript_include_tag 'application' %>
  </body>
</html>
