<!DOCTYPE html>
<html>
  <head>
    <title>RefugeeProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
    <nav class="nav">
      <header class="header">
        <h1>refugee_project.</h1>
      </header>
      <nav class="nav-login">
        <%= render partial: "layouts/login" if user_signed_in? %>
      </nav>
    </nav>
    <% if flash[:success] %>
      <div class="notice"><%= flash[:success].html_safe %></div>
    <% end %>
    <% if flash[:error] %>
      <div class="notice"><%= flash[:error].html_safe %></div>
    <% end %>
    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice].html_safe %></div>
    <% end %>
    <%= yield %>
    <%= javascript_include_tag 'application' %>
  </body>
</html>
